<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Country" />

        <View
            style="@style/Divider"
            android:layout_gravity="center"
            android:layout_marginTop="18dp" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="Title" />

        <TextView
            android:id="@+id/days_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="4 days" />

        <View
            style="@style/Divider"
            android:layout_gravity="center"
            android:layout_marginTop="18dp" />

        <Button
            android:id="@+id/days"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:backgroundTint="#204969"
            android:text="Days"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <View
            style="@style/Divider"
            android:layout_gravity="center"
            android:layout_marginTop="18dp" />

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="360dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            app:iss_auto_cycle="false"
            tools:background="@color/black" />

        <TextView
            android:id="@+id/description"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginTop="18dp"
            android:text="AdsfklsakfAdsfklsakfAdsfklsak. Adsfklsakf Adsfklsakf Adsfklsakf Adsfklsakf Adsfklsakf Adsfklsakf
            AdsfklsakfAdsfklsakf AdsfklsakfAdsfklsakf Adsfklsakf Adsfklsakf
            Adsorbs Adsfklsakf Adsfklsakf  dsfklsakf Adsfklsakf
            AdsfklsakfAssailsAdsfklsakfAdsfklsakfAdsfklsakfAdsfklsakf
            AdsfklsakfAdsfklsakfAdsfklsakfAdsfklsakfAdsfklsakfAdsfklsakfAdsfklsakfAdsfklsakf
            AdsfklsakfAdsfklsakfAdsfklsakfAdsfklsakfAdsfklsakfAdsfklsakfAdsfklsakfAdsfklsakf"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</ScrollView>